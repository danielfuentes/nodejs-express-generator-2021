<!doctype html>
<html lang="es">
  <%-include('./partials/head.ejs') %> 
  <body>
    <main class="container-fluid">
      <%-include('./partials/header.ejs') %>
      <h1 class="text-center text-success display-5 mt-5 pt-2">Administrador de Películas</h1>
      <section class="row">
          <article class="col-6" >
              <a class="nav-link" href="/movies/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
          </article>
          <article class="col-6 " >
              <form  class=" d-flex justify-content-between " action="/movies/buscar" method="GET">
                <input class="form-control mr-sm-2" type="search" name="buscar">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit"><ion-icon name="search-outline"></ion-icon></button>
              </form>
            </article>
    
      </section>
      <table class="table mt-5">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Nombre de la Película</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Borrar</th>
              </tr>
          </thead>
          <tbody>
              <% peliculas.forEach(pelicula => { %>
                  <tr>
                      <td><%= pelicula.id %> </td>
                      <td><%= pelicula.title%> </td>
                      <td><a href="/movies/detail/<%= pelicula.id%>"><ion-icon name="eye-outline"></ion-icon></a></td>
                      <td><a href="/movies/edit/<%= pelicula.id%>"><ion-icon name="create-outline"></ion-icon></a></td>
                      <td><a href="/movies/delete/<%= pelicula.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
                  </tr>
              <% }) ; %>
          </tbody>
      </table>    
</main>
