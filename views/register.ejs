<!doctype html>
<html lang="es">
  <%-include('./partials/head.ejs') %> 
  <body>
    <main class="container-fluid">
      <%-include('./partials/header.ejs') %>
      <section class="row">
        <article class="col-12 col-md-6 m-auto">
            <h1 class="text-center pt-1">Registrarme</h1>
            <form action="/users/store" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="nombre" class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="nombre" name="nombre" >
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" >
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Clave secreta</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>  
                <div class="mb-3">
                    <label for="rectificarPassword" class="form-label">Rectifica la clave</label>
                    <input type="password" class="form-control" id="rectificarPassword" name="rectificarPassword" >
                </div>      
                <div class="mb-3">
                  <label for="avatar" class="form-label">Seleccione su avatar</label>
                  <input class="form-control" type="file" id="avatar" name="avatar">
                </div>          
                <div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-danger"  href="/">Volver</a>
                    
                </div>
                
              </form>
              <div class="text-center my-3">
                Ya tengo una cuenta? <a href="/users/login">Inicia sesi√≥n</a>
              </div>            
        </article>
    </section>
</main>
